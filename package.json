{
  "name": "sistema-transporte-ambulancias",
  "version": "1.0.0",
  "description": "Sistema completo de gestão de transporte de ambulâncias para Secretaria de Saúde",
  "main": "backend/server.js",
  "scripts": {
    "start": "concurrently \"npm run backend:start\" \"npm run frontend:start\"",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:dev": "cd frontend-web && npm start",
    "frontend:start": "cd frontend-web && npm start",
    "frontend:build": "cd frontend-web && npm run build",
    "mobile:android": "cd mobile-app && npx react-native run-android",
    "mobile:ios": "cd mobile-app && npx react-native run-ios",
    "mobile:start": "cd mobile-app && npx react-native start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend-web && npm install && cd ../mobile-app && npm install",
    "setup": "npm run install:all && npm run db:setup",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:reset": "cd backend && npm run db:reset && npm run db:migrate && npm run db:seed",
    "build": "npm run frontend:build",
    "test": "echo \"No tests specified yet\"",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed"
  },
  "keywords": [
    "ambulancia",
    "transporte",
    "saude",
    "gps",
    "tracking",
    "websocket",
    "react",
    "nodejs",
    "mariadb"
  ],
  "author": "Secretaria de Saúde",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend-web",
    "mobile-app"
  ]
}